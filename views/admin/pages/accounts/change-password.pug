extends ../../layouts/default.pug
block main
    if (role.permissions.includes("accounts_edit"))
        .main
            h2
                .title-page #{pageTitle}
            .row 
                .col-4
                form(
                    class="col-4"
                    action=`/${prefixAdmin}/accounts/change-password/${account.id}?_method=Patch`
                    method="POST"
                )
                    div(class="mb-3")
                        label(for="fullName" class="label-title") Họ tên *
                        input(
                            type="text"
                            class="form-control"
                            id="fullName"
                            name="fullName"
                            required
                            value=account.fullName
                        )
                    div(class="mb-3")
                        label(for="password" class="label-title") Mật khẩu *
                        input(
                            type="password"
                            class="form-control"
                            id="password"
                            name="password"
                            required
                        )
                    div(class="mb-3")
                        button(
                            type="submit"
                            class="btn px-5 bg-main"
                        ) Đổi mật khẩu
                .col-4