extends ../../layouts/default.pug
block main
    .main
        h2
            .title-page #{pageTitle}
        form(
            action=`/${prefixAdmin}/accounts/edit/${account.id}?_method=PATCH`
            method="POST"
                enctype="multipart/form-data"
        )
            div(class="mb-3")
                label(for="fullName" class="label-title") Họ tên *
                input(
                    type="text"
                    class="form-control"
                    id="fullName"
                    name="fullName"
                    required
                    value=account.fullName
                )
            div(class="mb-3")
                label(for="email" class="label-title") Email *
                input(
                    type="email"
                    class="form-control"
                    id="email"
                    name="email"
                    required
                    value=account.email
                )
            div(class="mb-3")
                label(for="phone" class="label-title") Số điện thoại
                input(
                    type="text"
                    class="form-control"
                    id="phone"
                    name="phone"
                    value=account.phone
                )
            div(
                class="mb-3"
                upload-image
            )
                label(for="avatar" class="label-title") Avatar
                input(
                    type="file"
                    class="form-control"
                    id="avatar"
                    name="avatar"
                    accept="image/*"
                    upload-image-input
                )
                img(
                    src=account.avatar
                    class="image-preview"
                    upload-image-preview
                )
            div(class="mb-3")
                label(for="role_id" class="label-title") Nhóm quyền
                select(name="role_id" id="role_id" class="form-control")
                    option(disabled) -- Chọn --
                    each role in roles
                        option(
                            value=role.id
                            selected=(role.id == account.role_id ? true : false)
                        ) #{role.title}
            div(class="mb-3 form-check form-check-inline")
                input(
                    type="radio"
                    class="form-check-input"
                    id="statusActive"
                    name="status"
                    value="active"
                    checked=(account.status == "active" ? true : false)
                )
                label(for="statusActive" class="form-check-label") Hoạt động
            div(class="mb-3 form-check form-check-inline")
                input(
                    type="radio"
                    class="form-check-input"
                    id="statusInActive"
                    name="status"
                    value="inactive"
                    checked=(account.status == "inactive" ? true : false)
                )
                label(for="statusInActive" class="form-check-label") Dừng hoạt động
            div(class="mb-3")
                button(
                    type="submit"
                    class="btn bg-main px-5"
                ) Cập nhật