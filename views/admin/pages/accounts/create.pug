extends ../../layouts/default.pug
block main
    if (role.permissions.includes("accounts_create"))
        .main
            h2
                .title-page #{pageTitle}
            form(
                action=`/${prefixAdmin}/accounts/create`
                method="POST"
                    enctype="multipart/form-data"
            )
                div(class="mb-3")
                    label(for="fullName" class="label-title") Họ tên *
                    input(
                        type="text"
                        class="form-control"
                        id="fullName"
                        name="fullName"
                        required
                    )
                div(class="mb-3")
                    label(for="email" class="label-title") Email *
                    input(
                        type="email"
                        class="form-control"
                        id="email"
                        name="email"
                        required
                    )
                div(class="mb-3")
                    label(for="password" class="label-title") Mật khẩu *
                    input(
                        type="password"
                        class="form-control"
                        id="password"
                        name="password"
                        required
                    )
                div(class="mb-3")
                    label(for="phone" class="label-title") Số điện thoại
                    input(
                        type="text"
                        class="form-control"
                        id="phone"
                        name="phone"
                    )
                div(class="mb-3"
                    upload-image
                )
                    label(for="avatar" class="label-title") Avatar
                    input(
                        type="file"
                        class="form-control"
                        id="avatar"
                        name="avatar"
                        accept="image/*"
                        upload-image-input
                    )
                    img(
                        src=""
                        class="image-preview"
                        upload-image-preview
                    )
                div(class="mb-3")
                    label(for="role_id" class="label-title") Nhóm quyền
                    select(name="role_id" id="role_id" class="form-control")
                        option(disabled) -- Chọn --
                        each role in roles
                            option(value=role.id) #{role.title}
                div(class="mb-3 form-check form-check-inline")
                    input(
                        type="radio"
                        class="form-check-input"
                        id="statusActive"
                        name="status"
                        value="active"
                        checked
                    )
                    label(for="statusActive" class="form-check-label") Hoạt động
                div(class="mb-3 form-check form-check-inline")
                    input(
                        type="radio"
                        class="form-check-input"
                        id="statusInActive"
                        name="status"
                        value="inactive"
                    )
                    label(for="statusInActive" class="form-check-label") Dừng hoạt động
                div(class="mb-3")
                    button(
                        type="submit"
                        class="btn px-5 bg-main"
                    ) Tạo mới